<?xml version="1.0" ?>
<config>
	
	<system_db>
		<host>localhost</host>
		<port>3306</port>
		<user>solidmatter</user>
		<pass>solidmatter</pass>
		<schema>solidmatter</schema>
		<charset>utf8</charset>
		<log enabled="false" verbose="false">
			<file>log_database_sys.txt</file>
			<size>1024</size>
		</log>
	</system_db>
	
	<handlers>
		<handler id="backend">
			<library>sbSystem:sb.handler.request.backend</library>
			<class>BackendRequestHandler</class>
		</handler>
		<handler id="frontend">
			<library>sbSystem:sb.handler.request.frontend</library>
			<class>FrontendRequestHandler</class>
		</handler>
		<handler id="application">
			<library>sbSystem:sb.handler.request.application</library>
			<class>ApplicationRequestHandler</class>
		</handler>
		<handler id="api">
			<library>sbSystem:sb.handler.request.api</library>
			<class>APIRequestHandler</class>
		</handler>
		<handler id="xsl">
			<library>sbSystem:sb.handler.request.xsl</library>
			<class>XSLRequestHandler</class>
		</handler>
		<handler id="jbaudiostream">
			<library>sbJukebox:sb.handler.request.audiostream</library>
			<class>JBAudioStreamHandler</class>
		</handler>
		<handler id="jbrss">
			<library>sbJukebox:sb.handler.request.rss</library>
			<class>JBRSSHandler</class>
		</handler>
		<handler id="portal">
			<library>sbPortal:sb.handler.request.portal</library>
			<class>PortalHandler</class>
		</handler>
	</handlers>
	
</config>