	<!-- jukebox production repository -->
	<site location="jb.jukebox/" type="controller" handler="application" subject="demojukebox" theme="_default">
		<storage repository="jukebox" workspace="production" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="jb.jukebox/api" type="controller" handler="api" subject="demojukebox" theme="_default" />
		<site location="jb.jukebox/theme" type="theme" handler="backend" theme="_default" />
